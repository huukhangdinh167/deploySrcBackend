<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .boderbottom {
            border-bottom: 3px solid;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="edit-user-infor-container">


                <form method="POST" action="/users/update">
                    <div class="pt-3">
                        <h2>Update User</h2>
                    </div>
                    <div>
                        <input hidden type="text" value="<%=userData.id%>" name="id">
                    </div>
                    <div class="mb-3 col-6 mt-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input value="<%=userData.email%>" type="email" required name="email" class="form-control" id="exampleInputEmail1">
                    </div>
                    <!-- <div class="mb-3 col-6 mt-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input value="<%=userData.password%>" type="password" required name="password" class="form-control" id="exampleInputPassword1">
                    </div> -->
                    <div class="mb-3 col-6 mt-3">
                        <label for="exampleInputusername" class="form-label">username</label>
                        <input value="<%=userData.username%>" type="username" required name="username" class="form-control" id="exampleInputusername1">
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                </form>


            </div>
           
        </div>
    </div>

</body>

</html>